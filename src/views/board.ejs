<%- include('includes/head', { title: 'Board — Better Us' }) %>
<%- include('includes/navbar-authed')%>

<script src="/js/index.js"></script>
</head>
<body class="min-h-dvh bg-peach-50 text-gray-900 antialiased selection:bg-black selection:text-white">
<main>
    <section class="relative hero-bg">
    <div class="mx-auto max-w-6xl px-4 py-8">
    
        <section id="emptyBoard" class="flex min-h-[75svh] flex-col items-center justify-center text-center">
            <p class="text-xl sm:text-2xl font-semibold">Seems like you don’t have a partner, yet.</p>
            <p class="mt-1 text-gray-700">
                If your partner is on Better Us, connect now so you can start a board together.
            </p>
        
            <form id="inviteForm" class="mt-6 flex w-full max-w-xl items-center gap-3">
                <input
                    type="email"
                    name="partnerEmail"
                    required
                    placeholder="partner@email.com"
                    class="w-full rounded-full bg-white border border-black/10 px-4 py-3 focus:outline-none focus:ring-2 focus:ring-black/20" />
                <button
                    type="submit"
                    class="rounded-full bg-black px-5 py-3 text-sm font-medium text-white transition hover:opacity-90">
                    Invite
                </button>
            </form>
        </section>
    
        <section id="activeBoard" class="hidden">
        <!-- board header -->
        <header class="mb-8 flex flex-col items-start justify-between gap-4 sm:flex-row sm:items-center">
            <div class="space-y-1">
            <p class="text-sm uppercase tracking-wide text-gray-600">Board Name</p>
            <h1 class="text-2xl font-bold">Our Board</h1>
            </div>
    
            <div class="flex items-center gap-3">
            <button class="rounded-full border border-black px-5 py-2 text-sm font-medium text-black transition hover:bg-black hover:text-white">
                + New Card
            </button>
            </div>
        </header>
    
        <!-- columns -->
        <div class="grid gap-6 overflow-x-auto sm:grid-cols-2 lg:grid-cols-4">
            <!-- column: OPEN -->
            <div class="flex min-w-[260px] flex-col rounded-2xl border border-black/10 bg-white p-4">
                <h2 class="mb-3 text-lg font-semibold tracking-wide">OPEN</h2>
                    <div class="space-y-3">
                        <!-- mock cards -->
                        <div class="rounded-xl border border-black/10 bg-white p-4 shadow-sm">
                        <p class="text-base font-semibold">Plan dinner</p>
                            <div class="mt-3 flex items-center justify-between text-sm text-gray-700">
                                <span>issued by: <span class="font-medium">username</span></span>
                                <span class="flex items-center gap-1">
                                Low
                                <span class="h-3 w-3 rounded-full bg-green-400"></span>
                                </span>
                            </div>
                        </div>

                        <div class="rounded-xl border border-black/10 bg-white p-4 shadow-sm">
                        <p class="text-base font-semibold">Call Plumber</p>
                            <div class="mt-3 flex items-center justify-between text-sm text-gray-700">
                                <span>issued by: <span class="font-medium">username</span></span>
                                <span class="flex items-center gap-1">
                                Low
                                <span class="h-3 w-3 rounded-full bg-green-400"></span>
                                </span>
                            </div>
                        </div>
                        
                        <div class="rounded-xl border border-black/10 bg-white p-4 shadow-sm">
                        <p class="text-base font-semibold">Choose a Gym</p>
                            <div class="mt-3 flex items-center justify-between text-sm text-gray-700">
                                <span>issued by: <span class="font-medium">username</span></span>
                                <span class="flex items-center gap-1">
                                Low
                                <span class="h-3 w-3 rounded-full bg-green-400"></span>
                                </span>
                            </div>
                        </div>
                        
                    </div>
                <button class="mt-4 text-left text-sm font-medium underline-offset-4 hover:underline">
                    Show +2 more
                </button>
            </div>
    
            <!-- column: IN PROGRESS -->
            <div class="flex min-w-[260px] flex-col rounded-2xl border border-black/10 bg-white p-4">
            <h2 class="mb-3 text-lg font-semibold tracking-wide">IN PROGRESS</h2>
            <div class="space-y-3">
                <div class="rounded-xl border border-black/10 bg-white p-3 shadow-sm">
                <p class="font-medium">Grocery list for Friday</p>
                </div>
                <div class="rounded-xl border border-black/10 bg-white p-3 shadow-sm">
                <p class="font-medium">Date-night ideas</p>
                </div>
                <div class="rounded-xl border border-black/10 bg-white p-3 shadow-sm">
                <p class="font-medium">Organize photo album</p>
                </div>
            </div>
            </div>
    
            <!-- column: NEEDS REFLECTION -->
            <div class="flex min-w-[260px] flex-col rounded-2xl border border-black/10 bg-white p-4">
            <h2 class="mb-3 text-lg font-semibold tracking-wide">NEEDS REFLECTION</h2>
            <div class="space-y-3">
                <div class="rounded-xl border border-black/10 bg-white p-3 shadow-sm">
                <p class="font-medium">Budget conversation follow-up</p>
                </div>
                <div class="rounded-xl border border-black/10 bg-white p-3 shadow-sm">
                <p class="font-medium">Screen-time boundaries</p>
                </div>
                <div class="rounded-xl border border-black/10 bg-white p-3 shadow-sm">
                <p class="font-medium">Chores rotation check-in</p>
                </div>
            </div>
            </div>
    
            <!-- column: RESOLVED -->
            <div class="flex min-w-[260px] flex-col rounded-2xl border border-black/10 bg-white p-4">
            <h2 class="mb-3 text-lg font-semibold tracking-wide">RESOLVED</h2>
            <div class="space-y-3">
                <div class="rounded-xl border border-black/10 bg-white p-3 shadow-sm">
                <p class="font-medium">Booked anniversary dinner</p>
                </div>
                <div class="rounded-xl border border-black/10 bg-white p-3 shadow-sm">
                <p class="font-medium">Set savings goal</p>
                </div>
                <div class="rounded-xl border border-black/10 bg-white p-3 shadow-sm">
                <p class="font-medium">Weekly walk routine</p>
                </div>
            </div>
            </div>
        </div>
        </section>
    
    </div>
</main>

<%- include('includes/footer') %>

